<UserControl x:Class="DomitoryAppDEMO.Views.ResidentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Заголовок -->
            <StackPanel Margin="0 0 0 24">
                <TextBlock Text="Управление жильцами" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937"/>
                <TextBlock Text="Регистрация и учёт проживающих в общежитии" 
                           Foreground="#6B7280" 
                           FontSize="16"
                           Margin="0 4 0 0"/>
            </StackPanel>

            <!-- Панель действий -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="20"
                    Margin="0 0 0 24">
                <StackPanel>
                    <TextBlock Text="Действия с жильцами" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 16"/>

                    <WrapPanel>
                        <Button Background="#3B82F6"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Padding="16 12"
                                Margin="0 0 12 12"
                                Cursor="Hand"
                                Click="NewResidentButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➕" Margin="0 0 8 0"/>
                                <TextBlock Text="Новый жилец"/>
                            </StackPanel>
                        </Button>

                        <Button Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="16 12"
                                Margin="0 0 12 12"
                                Cursor="Hand"
                                Click="EditResidentButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✏️" Margin="0 0 8 0"/>
                                <TextBlock Text="Редактировать"/>
                            </StackPanel>
                        </Button>

                        <Button Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="16 12"
                                Margin="0 0 12 12"
                                Cursor="Hand"
                                Click="CheckOutButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚪" Margin="0 0 8 0"/>
                                <TextBlock Text="Выселить"/>
                            </StackPanel>
                        </Button>

                        <Button Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="16 12"
                                Margin="0 0 12 12"
                                Cursor="Hand"
                                Click="ExportResidentsButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" Margin="0 0 8 0"/>
                                <TextBlock Text="Экспорт"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Статистика -->
            <Grid Margin="0 0 0 24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Всего жильцов -->
                <Border Grid.Column="0" 
                        Background="#E0E7FF"
                        CornerRadius="12"
                        Padding="24"
                        Margin="0 0 12 0">
                    <StackPanel>
                        <TextBlock Text="156" 
                                   FontSize="32" 
                                   FontWeight="SemiBold"
                                   Foreground="#3B82F6"/>
                        <TextBlock Text="Всего жильцов" 
                                   Foreground="#374151"/>
                    </StackPanel>
                </Border>

                <!-- Студенты -->
                <Border Grid.Column="1" 
                        Background="#D1FAE5"
                        CornerRadius="12"
                        Padding="24"
                        Margin="6 0">
                    <StackPanel>
                        <TextBlock Text="124" 
                                   FontSize="32" 
                                   FontWeight="SemiBold"
                                   Foreground="#10B981"/>
                        <TextBlock Text="Студентов" 
                                   Foreground="#374151"/>
                    </StackPanel>
                </Border>

                <!-- Сотрудники -->
                <Border Grid.Column="2" 
                        Background="#FEF3C7"
                        CornerRadius="12"
                        Padding="24"
                        Margin="12 0 0 0">
                    <StackPanel>
                        <TextBlock Text="32" 
                                   FontSize="32" 
                                   FontWeight="SemiBold"
                                   Foreground="#D97706"/>
                        <TextBlock Text="Сотрудников" 
                                   Foreground="#374151"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Быстрый поиск -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="24">
                <StackPanel>
                    <TextBlock Text="Быстрый поиск жильца" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Height="44"
                                 Padding="16"
                                 VerticalContentAlignment="Center"
                                 Text=""
                                 BorderThickness="1"
                                 BorderBrush="#D1D5DB"
                                 
                                 FontSize="14"
                                 >
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="{TemplateBinding Tag}">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      Margin="{TemplateBinding Padding}"
                                                                      VerticalAlignment="Center"/>
                                                        <TextBlock x:Name="placeholder"
                                                                  
                                                                   Foreground="#9CA3AF"
                                                                   Margin="{TemplateBinding Padding}"
                                                                   VerticalAlignment="Center"
                                                                   Visibility="Collapsed"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Grid.Column="1"
                                Background="#3B82F6"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Padding="16 12"
                                Margin="12 0 0 0"
                                Cursor="Hand"
                                Click="SearchResidentButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔍" Margin="0 0 8 0"/>
                                <TextBlock Text="Найти"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>