<UserControl x:Class="DomitoryAppDEMO.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Заголовок -->
            <StackPanel Margin="0 0 0 24">
                <TextBlock Text="Настройки системы" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937"/>
                <TextBlock Text="Конфигурация приложения и системные параметры" 
                           Foreground="#6B7280" 
                           FontSize="16"
                           Margin="0 4 0 0"/>
            </StackPanel>

            <!-- Основные настройки -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="24"
                    Margin="0 0 0 24">
                <StackPanel>
                    <TextBlock Text="Основные настройки" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 20"/>

                    <StackPanel>
                        <!-- Язык -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="🌐"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="Язык интерфейса"
                                           VerticalAlignment="Center"/>

                                <ComboBox Grid.Column="2"
                                          Width="120"
                                          SelectedIndex="0">
                                    <ComboBoxItem>Русский</ComboBoxItem>
                                    <ComboBoxItem>English</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Валюта -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="💰"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="Валюта расчётов"
                                           VerticalAlignment="Center"/>

                                <ComboBox Grid.Column="2"
                                          Width="120"
                                          SelectedIndex="0">
                                    <ComboBoxItem>Рубли (₽)</ComboBoxItem>
                                    <ComboBoxItem>Доллары ($)</ComboBoxItem>
                                    <ComboBoxItem>Евро (€)</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Формат даты -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="📅"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="Формат даты"
                                           VerticalAlignment="Center"/>

                                <ComboBox Grid.Column="2"
                                          Width="120"
                                          SelectedIndex="0">
                                    <ComboBoxItem>ДД.ММ.ГГГГ</ComboBoxItem>
                                    <ComboBoxItem>ГГГГ-ММ-ДД</ComboBoxItem>
                                    <ComboBoxItem>ММ/ДД/ГГГГ</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Настройки уведомлений -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="24"
                    Margin="0 0 0 24">
                <StackPanel>
                    <TextBlock Text="Уведомления" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 20"/>

                    <StackPanel>
                        <!-- Email уведомления -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="📧"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Email уведомления" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Отправлять на почту" 
                                               Foreground="#6B7280" 
                                               FontSize="13"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2"
                                          IsChecked="True"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- СМС уведомления -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="📱"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="SMS уведомления" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Отправлять на телефон" 
                                               Foreground="#6B7280" 
                                               FontSize="13"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2"
                                          IsChecked="False"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Уведомления в приложении -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="🔔"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Внутренние уведомления" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Показывать в приложении" 
                                               Foreground="#6B7280" 
                                               FontSize="13"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2"
                                          IsChecked="True"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Кнопки действий -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Background="#3B82F6"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Padding="16 12"
                        Margin="0 0 12 0"
                        Cursor="Hand"
                        Click="SaveSettingsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" Margin="0 0 8 0"/>
                        <TextBlock Text="Сохранить настройки"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                        Background="White"
                        Foreground="#374151"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Padding="16 12"
                        Cursor="Hand"
                        Click="ResetSettingsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄" Margin="0 0 8 0"/>
                        <TextBlock Text="Сбросить"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>