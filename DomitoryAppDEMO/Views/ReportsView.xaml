<UserControl x:Class="DomitoryAppDEMO.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Заголовок -->
            <StackPanel Margin="0 0 0 24">
                <TextBlock Text="Отчёты и аналитика" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937"/>
                <TextBlock Text="Формирование отчётов и анализ данных" 
                           Foreground="#6B7280" 
                           FontSize="16"
                           Margin="0 4 0 0"/>
            </StackPanel>

            <!-- Карточки отчётов -->
            <WrapPanel Margin="0 0 0 24">
                <!-- Отчёт по должникам -->
                <Border Width="240" 
                        Height="180"
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="20"
                        Margin="0 0 16 16">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="DebtorsReportButton_Click">
                        <StackPanel>
                            <Border Width="48" 
                                    Height="48" 
                                    Background="#FEE2E2" 
                                    CornerRadius="24"
                                    Margin="0 0 0 12">
                                <TextBlock Text="⚠️" 
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Отчёт по должникам" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0 0 0 4"/>
                            <TextBlock Text="Список жильцов с задолженностью" 
                                       Foreground="#6B7280" 
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Финансовый отчёт -->
                <Border Width="240" 
                        Height="180"
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="20"
                        Margin="0 0 16 16">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="FinancialReportButton_Click">
                        <StackPanel>
                            <Border Width="48" 
                                    Height="48" 
                                    Background="#D1FAE5" 
                                    CornerRadius="24"
                                    Margin="0 0 0 12">
                                <TextBlock Text="💰" 
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Финансовый отчёт" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0 0 0 4"/>
                            <TextBlock Text="Доходы, расходы и прибыль" 
                                       Foreground="#6B7280" 
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Отчёт по занятости -->
                <Border Width="240" 
                        Height="180"
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="20"
                        Margin="0 0 16 16">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="OccupancyReportButton_Click">
                        <StackPanel>
                            <Border Width="48" 
                                    Height="48" 
                                    Background="#E0E7FF" 
                                    CornerRadius="24"
                                    Margin="0 0 0 12">
                                <TextBlock Text="🛏️" 
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Отчёт по занятости" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0 0 0 4"/>
                            <TextBlock Text="Заполняемость помещений" 
                                       Foreground="#6B7280" 
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Отчёт по услугам -->
                <Border Width="240" 
                        Height="180"
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="20"
                        Margin="0 0 16 16">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ServicesReportButton_Click">
                        <StackPanel>
                            <Border Width="48" 
                                    Height="48" 
                                    Background="#F3E8FF" 
                                    CornerRadius="24"
                                    Margin="0 0 0 12">
                                <TextBlock Text="💧" 
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Потребление услуг" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0 0 0 4"/>
                            <TextBlock Text="Вода, электричество, отопление" 
                                       Foreground="#6B7280" 
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>
                </Border>
            </WrapPanel>

            <!-- Параметры отчёта -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="24">
                <StackPanel>
                    <TextBlock Text="Параметры отчёта" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 16"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Период -->
                        <Border Grid.Row="0"
                                Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="📅"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="Период: Декабрь 2025"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2"
                                        Background="White"
                                        Foreground="#374151"
                                        BorderBrush="#D1D5DB"
                                        BorderThickness="1"
                                        Padding="8 6"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Изменить" Margin="0 0 4 0"/>
                                        <TextBlock Text="▼" FontSize="10"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Формат -->
                        <Border Grid.Row="1"
                                Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="📄"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="Формат: Excel (XLSX)"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2"
                                        Background="White"
                                        Foreground="#374151"
                                        BorderBrush="#D1D5DB"
                                        BorderThickness="1"
                                        Padding="8 6"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Изменить" Margin="0 0 4 0"/>
                                        <TextBlock Text="▼" FontSize="10"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Кнопка генерации -->
                        <Button Grid.Row="2"
                                Background="#3B82F6"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Padding="16 12"
                                HorizontalAlignment="Right"
                                Cursor="Hand"
                                Click="GenerateReportButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" Margin="0 0 8 0"/>
                                <TextBlock Text="Сформировать отчёт"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>