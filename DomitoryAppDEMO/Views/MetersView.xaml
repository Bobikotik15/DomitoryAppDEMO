<UserControl x:Class="DomitoryAppDEMO.Views.MetersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Заголовок -->
            <StackPanel Margin="0 0 0 24">
                <TextBlock Text="Учёт коммунальных услуг" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937"/>
                <TextBlock Text="Ввод показаний счётчиков и контроль потребления" 
                           Foreground="#6B7280" 
                           FontSize="16"
                           Margin="0 4 0 0"/>
            </StackPanel>

            <!-- Карточки услуг -->
            <Grid Margin="0 0 0 24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Вода -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="24"
                        Margin="0 0 12 0">
                    <StackPanel>
                        <TextBlock Text="💧" 
                                   FontSize="32"
                                   Margin="0 0 0 12"/>
                        <TextBlock Text="Холодная вода" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 8"/>
                        <TextBlock Text="124 м³" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   Foreground="#3B82F6"/>
                        <TextBlock Text="За текущий месяц" 
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <!-- Электричество -->
                <Border Grid.Column="1" 
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="24"
                        Margin="6 0">
                    <StackPanel>
                        <TextBlock Text="⚡" 
                                   FontSize="32"
                                   Margin="0 0 0 12"/>
                        <TextBlock Text="Электричество" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 8"/>
                        <TextBlock Text="8,560 кВт·ч" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   Foreground="#F59E0B"/>
                        <TextBlock Text="За текущий месяц" 
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <!-- Отопление -->
                <Border Grid.Column="2" 
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="24"
                        Margin="12 0 0 0">
                    <StackPanel>
                        <TextBlock Text="🔥" 
                                   FontSize="32"
                                   Margin="0 0 0 12"/>
                        <TextBlock Text="Отопление" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 8"/>
                        <TextBlock Text="45 Гкал" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   Foreground="#EF4444"/>
                        <TextBlock Text="За текущий месяц" 
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Панель ввода показаний -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="24"
                    Margin="0 0 0 24">
                <StackPanel>
                    <TextBlock Text="Ввод показаний счётчиков" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 20"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Холодная вода -->
                        <Border Grid.Row="0"
                                Padding="16" 
                                Background="#F0F9FF" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Холодная вода" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Предыдущее показание: 1542 м³" 
                                               Foreground="#6B7280" 
                                               FontSize="13"/>
                                </StackPanel>

                                <TextBox Grid.Column="1"
                                         Width="120"
                                         Padding="12"
                                         VerticalContentAlignment="Center"
                                         Text="1566"
                                         BorderThickness="1"
                                         BorderBrush="#D1D5DB" Margin="0,-6,0,-6"/>
                            </Grid>
                        </Border>

                        <!-- Электричество -->
                        <Border Grid.Row="1"
                                Padding="16" 
                                Background="#FFFBEB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Электричество" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Предыдущее показание: 12540 кВт·ч" 
                                               Foreground="#6B7280" 
                                               FontSize="13"/>
                                </StackPanel>

                                <TextBox Grid.Column="1"
                                         Width="120"
                                         Padding="12"
                                         VerticalContentAlignment="Center"
                                         Text="12680"
                                         BorderThickness="1"
                                         BorderBrush="#D1D5DB"
                                         
                                         FontSize="14" Margin="0,-4,0,-4"/>
                            </Grid>
                        </Border>

                        <!-- Кнопка сохранения -->
                        <Button Grid.Row="2"
                                Background="#3B82F6"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Padding="16 12"
                                HorizontalAlignment="Right"
                                Cursor="Hand"
                                Click="SaveReadingsButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💾" Margin="0 0 8 0"/>
                                <TextBlock Text="Сохранить показания"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>