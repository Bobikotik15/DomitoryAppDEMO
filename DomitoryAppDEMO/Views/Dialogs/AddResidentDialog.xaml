<Window x:Class="DomitoryAppDEMO.Views.Dialogs.AddResidentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление нового жильца"
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="{x:Null}">

    <Border Padding="20" CornerRadius="30">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF9FFBE"/>
                <GradientStop Color="#FFD2B4FF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <StackPanel>
            <TextBlock Text="Добавление нового жильца" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0 0 0 20" Foreground="#FF1A1A1A" />

            <!-- ФИО -->
            <TextBlock Text="ФИО" 
                       Margin="0 0 0 4" Background="DarkOrange"/>
            <TextBox x:Name="FullNameTextBox"
                     Height="36"
                     Padding="8"
                     FontSize="14"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон" 
                       Margin="0 12 0 4" Background="#FFB7FF00"/>
            <TextBox x:Name="PhoneTextBox"
                     Height="36"
                     Padding="8"
                     FontSize="14"/>

            <!-- Email -->
            <TextBlock Text="Email" 
                       Margin="0 12 0 4" Background="#FF9BE6FF"/>
            <TextBox x:Name="EmailTextBox"
                     Height="36"
                     Padding="8"
                     FontSize="14"/>

            <!-- Категория -->
            <TextBlock Text="Категория" 
                       Margin="0 12 0 4" Background="#FFDB42FF"/>
            <ComboBox x:Name="CategoryComboBox"
                      Height="36"
                      SelectedIndex="0">
                <ComboBoxItem>Студент</ComboBoxItem>
                <ComboBoxItem>Сотрудник</ComboBoxItem>
                <ComboBoxItem>Гость</ComboBoxItem>
            </ComboBox>

            <!-- Комната -->
            <TextBlock Text="Комната" 
                       Margin="0 12 0 4" Background="#FFFFC700"/>
            <ComboBox x:Name="RoomComboBox"
                      Height="36"
                      DisplayMemberPath="Number"
                      SelectedValuePath="Id"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0 20 0 0">
                <Button Content="Отмена" 
                        Width="80" 
                        Height="36"
                        Margin="0 0 12 0"
                        Click="CancelButton_Click" Background="#FFFF9800"/>
                <Button Content="Добавить" 
                        Width="80" 
                        Height="36"
                        Background="#FFA000FF"
                        Foreground="White"
                        Click="AddButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>