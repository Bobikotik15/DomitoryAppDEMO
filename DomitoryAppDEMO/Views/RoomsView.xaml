<UserControl x:Class="DomitoryAppDEMO.Views.RoomsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Заголовок -->
            <StackPanel Margin="0 0 0 24">
                <TextBlock Text="Управление комнатами" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937"/>
                <TextBlock Text="Распределение и контроль жилых помещений" 
                           Foreground="#6B7280" 
                           FontSize="16"
                           Margin="0 4 0 0"/>
            </StackPanel>

            <!-- Фильтры -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="20"
                    Margin="0 0 0 24">
                <StackPanel>
                    <TextBlock Text="Фильтры" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 16"/>

                    <WrapPanel>
                        <Button Background="#3B82F6"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Padding="12 8"
                                Margin="0 0 8 8"
                                Cursor="Hand"
                                Click="AllRoomsButton_Click">
                            <TextBlock Text="Все комнаты"/>
                        </Button>

                        <Button Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="12 8"
                                Margin="0 0 8 8"
                                Cursor="Hand"
                                Click="FreeRoomsButton_Click">
                            <TextBlock Text="Свободные"/>
                        </Button>

                        <Button Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="12 8"
                                Margin="0 0 8 8"
                                Cursor="Hand"
                                Click="OccupiedRoomsButton_Click">
                            <TextBlock Text="Занятые"/>
                        </Button>

                        <Button Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="12 8"
                                Margin="0 0 8 8"
                                Cursor="Hand"
                                Click="UnderRepairButton_Click">
                            <TextBlock Text="На ремонте"/>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Статистика по этажам -->
            <Grid Margin="0 0 0 24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 1 этаж -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="20"
                        Margin="0 0 12 0">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Floor1Button_Click">
                        <StackPanel>
                            <TextBlock Text="1" 
                                       FontSize="32" 
                                       FontWeight="SemiBold"
                                       Foreground="#3B82F6"/>
                            <TextBlock Text="этаж" 
                                       Margin="0 4 0 0"/>
                            <TextBlock Text="36 комнат" 
                                       Foreground="#6B7280" 
                                       FontSize="13"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- 2 этаж -->
                <Border Grid.Column="1" 
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="20"
                        Margin="6 0">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Floor2Button_Click">
                        <StackPanel>
                            <TextBlock Text="2" 
                                       FontSize="32" 
                                       FontWeight="SemiBold"
                                       Foreground="#10B981"/>
                            <TextBlock Text="этаж" 
                                       Margin="0 4 0 0"/>
                            <TextBlock Text="36 комнат" 
                                       Foreground="#6B7280" 
                                       FontSize="13"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- 3 этаж -->
                <Border Grid.Column="2" 
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="20"
                        Margin="6 0">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Floor3Button_Click">
                        <StackPanel>
                            <TextBlock Text="3" 
                                       FontSize="32" 
                                       FontWeight="SemiBold"
                                       Foreground="#F59E0B"/>
                            <TextBlock Text="этаж" 
                                       Margin="0 4 0 0"/>
                            <TextBlock Text="36 комнат" 
                                       Foreground="#6B7280" 
                                       FontSize="13"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- 4 этаж -->
                <Border Grid.Column="3" 
                        Background="White"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB"
                        Padding="20"
                        Margin="12 0 0 0">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Floor4Button_Click">
                        <StackPanel>
                            <TextBlock Text="4" 
                                       FontSize="32" 
                                       FontWeight="SemiBold"
                                       Foreground="#8B5CF6"/>
                            <TextBlock Text="этаж" 
                                       Margin="0 4 0 0"/>
                            <TextBlock Text="32 комнаты" 
                                       Foreground="#6B7280" 
                                       FontSize="13"/>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>

            <!-- Карточки комнат -->
            <WrapPanel Margin="0 0 0 24">
                <!-- Комната 101 -->
                <Border Width="180" 
                        Height="120"
                        Background="#D1FAE5"
                        CornerRadius="12"
                        Padding="16"
                        Margin="0 0 12 12">
                    <StackPanel>
                        <TextBlock Text="101" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="#065F46"/>
                        <TextBlock Text="Свободна" 
                                   Foreground="#065F46" 
                                   FontSize="13"/>
                        <TextBlock Text="2 места" 
                                   Foreground="#6B7280" 
                                   FontSize="12"
                                   Margin="0 4 0 0"/>
                    </StackPanel>
                </Border>

                <!-- Комната 205 -->
                <Border Width="180" 
                        Height="120"
                        Background="#FEE2E2"
                        CornerRadius="12"
                        Padding="16"
                        Margin="0 0 12 12">
                    <StackPanel>
                        <TextBlock Text="205" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="#991B1B"/>
                        <TextBlock Text="Занята" 
                                   Foreground="#991B1B" 
                                   FontSize="13"/>
                        <TextBlock Text="Иванов И.И." 
                                   Foreground="#6B7280" 
                                   FontSize="12"
                                   Margin="0 4 0 0"/>
                    </StackPanel>
                </Border>

                <!-- Комната 312 -->
                <Border Width="180" 
                        Height="120"
                        Background="#FEF3C7"
                        CornerRadius="12"
                        Padding="16"
                        Margin="0 0 12 12">
                    <StackPanel>
                        <TextBlock Text="312" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="#92400E"/>
                        <TextBlock Text="На ремонте" 
                                   Foreground="#92400E" 
                                   FontSize="13"/>
                        <TextBlock Text="До 25.12.2025" 
                                   Foreground="#6B7280" 
                                   FontSize="12"
                                   Margin="0 4 0 0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>