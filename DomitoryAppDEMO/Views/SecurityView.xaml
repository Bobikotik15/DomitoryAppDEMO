<UserControl x:Class="DomitoryAppDEMO.Views.SecurityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- Заголовок -->
            <StackPanel Margin="0 0 0 24">
                <TextBlock Text="Безопасность системы" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937"/>
                <TextBlock Text="Управление доступом, шифрование данных и аудит" 
                           Foreground="#6B7280" 
                           FontSize="16"
                           Margin="0 4 0 0"/>
            </StackPanel>

            <!-- Статус безопасности -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="24"
                    Margin="0 0 0 24">
                <StackPanel>
                    <TextBlock Text="Статус безопасности" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Статус системы -->
                        <Border Grid.Column="0" 
                                Background="#D1FAE5"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0 0 12 0">
                            <StackPanel>
                                <TextBlock Text="🛡️" 
                                           FontSize="24"
                                           Margin="0 0 0 8"/>
                                <TextBlock Text="Защищено" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#065F46"/>
                            </StackPanel>
                        </Border>

                        <!-- Активные сессии -->
                        <Border Grid.Column="1" 
                                Background="#E0E7FF"
                                CornerRadius="8"
                                Padding="20"
                                Margin="6 0">
                            <StackPanel>
                                <TextBlock Text="👥" 
                                           FontSize="24"
                                           Margin="0 0 0 8"/>
                                <TextBlock Text="5" 
                                           FontSize="20" 
                                           FontWeight="SemiBold"
                                           Foreground="#3730A3"/>
                                <TextBlock Text="активных сессий" 
                                           Foreground="#6B7280" 
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- Последняя проверка -->
                        <Border Grid.Column="2" 
                                Background="#FEF3C7"
                                CornerRadius="8"
                                Padding="20"
                                Margin="12 0 0 0">
                            <StackPanel>
                                <TextBlock Text="🕒" 
                                           FontSize="24"
                                           Margin="0 0 0 8"/>
                                <TextBlock Text="Сегодня" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#92400E"/>
                                <TextBlock Text="10:30 утра" 
                                           Foreground="#6B7280" 
                                           FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Управление доступом -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="24"
                    Margin="0 0 0 24">
                <StackPanel>
                    <TextBlock Text="Управление доступом" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 20"/>

                    <WrapPanel>
                        <Button Background="#3B82F6"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Padding="16 12"
                                Margin="0 0 12 12"
                                Cursor="Hand"
                                Click="ManageUsersButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" Margin="0 0 8 0"/>
                                <TextBlock Text="Пользователи"/>
                            </StackPanel>
                        </Button>

                        <Button Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="16 12"
                                Margin="0 0 12 12"
                                Cursor="Hand"
                                Click="ManageRolesButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👑" Margin="0 0 8 0"/>
                                <TextBlock Text="Роли"/>
                            </StackPanel>
                        </Button>

                        <Button Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="16 12"
                                Margin="0 0 12 12"
                                Cursor="Hand"
                                Click="AuditLogButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" Margin="0 0 8 0"/>
                                <TextBlock Text="Журнал аудита"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Настройки шифрования -->
            <Border Background="White"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="24">
                <StackPanel>
                    <TextBlock Text="Настройки шифрования" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0 0 0 16"/>

                    <StackPanel>
                        <!-- База данных -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="🔒"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="База данных" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="AES-256 шифрование" 
                                               Foreground="#6B7280" 
                                               FontSize="13"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                           Text="✅ Включено"
                                           Foreground="#10B981"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Файлы -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8"
                                Margin="0 0 0 12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="📁"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Файлы и документы" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="AES-256 шифрование" 
                                               Foreground="#6B7280" 
                                               FontSize="13"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                           Text="✅ Включено"
                                           Foreground="#10B981"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Резервные копии -->
                        <Border Padding="16" 
                                Background="#F9FAFB" 
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="💾"
                                           FontSize="16"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Резервные копии" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Автоматическое шифрование" 
                                               Foreground="#6B7280" 
                                               FontSize="13"/>
                                </StackPanel>

                                <Button Grid.Column="2"
                                        Background="#3B82F6"
                                        Foreground="White"
                                        FontWeight="SemiBold"
                                        BorderThickness="0"
                                        Padding="8 6"
                                        Cursor="Hand"
                                        Click="BackupNowButton_Click">
                                    <TextBlock Text="Сделать backup"/>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>