<Window x:Class="DomitoryAppDEMO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DomitoryAppDEMO"
        mc:Ignorable="d"
        Title="Система учёта общежития"
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Border CornerRadius="30" Background="#FFFFFF">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" 
                              ShadowDepth="3" 
                              Opacity="0.1" 
                              Direction="270"
                              Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <!-- Хедер -->
                <RowDefinition Height="*"/>
                <!-- Основной контент -->
                <RowDefinition Height="40"/>
                <!-- Футер -->
            </Grid.RowDefinitions>

            <!-- ХЕДЕР -->
            <Border Grid.Row="0"
                    Height="64" 
                    Background="#FFF9FAFB" 
                    CornerRadius="30 30 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Логотип -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="24 0">
                        <Border Width="36" 
                                Height="36" 
                                Background="White" 
                                CornerRadius="8"
                                Margin="0 0 12 0">
                            <TextBlock Text="🏠" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Учёт общежития" 
                                   Foreground="#1F2937" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Поиск с закруглёнными краями -->
                    <Border Grid.Column="1" 
                            Width="300" 
                            Height="36" 
                            CornerRadius="18" 
                            Background="White"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            BorderThickness="1"
                            BorderBrush="#E5E7EB">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Иконка поиска -->
                            <TextBlock Grid.Column="0"
                                       Text="🔍" 
                                       FontSize="14"
                                       Margin="12 0 8 0"
                                       VerticalAlignment="Center"
                                       Foreground="#9CA3AF"/>

                            <!-- Поле поиска -->
                            <TextBox Grid.Column="1"
                                     x:Name="SearchTextBox"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"
                                     Foreground="#1F2937"
                                     Padding="0 2"
                                     TextChanged="SearchTextBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Круглые кнопки управления окном -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0 0 20 0">
                        <!-- Кнопка "Убрать" (Свернуть) -->
                        <Button x:Name="MinimizeButton" 
                                Width="32" 
                                Height="32" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="MinimizeButton_Click"
                                ToolTip="Свернуть"
                                Cursor="Hand">
                            <Grid>
                                <Ellipse Width="32" Height="32" Fill="#F3F4F6">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#F3F4F6"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Fill" Value="#E5E7EB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="➖" 
                                           FontSize="14" 
                                           Foreground="#FFFFBB00"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>

                        <!-- Кнопка "Расширить" (Развернуть/Восстановить) -->
                        <Button x:Name="MaximizeButton" 
                                Width="32" 
                                Height="32" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="MaximizeButton_Click"
                                Margin="8 0"
                                ToolTip="Развернуть"
                                Cursor="Hand">
                            <Grid>
                                <Ellipse Width="32" Height="32" Fill="#F3F4F6">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#F3F4F6"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Fill" Value="#E5E7EB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="⬜" 
                                           FontSize="14" 
                                           Foreground="#FF13FF00"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>

                        <!-- Кнопка "Закрыть" -->
                        <Button x:Name="CloseButton" 
                                Width="32" 
                                Height="32" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Click="CloseButton_Click"
                                ToolTip="Закрыть"
                                Cursor="Hand">
                            <Grid>
                                <Ellipse Width="32" Height="32" Fill="#F3F4F6">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#F3F4F6"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Fill" Value="#EF4444"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="✕" 
                                           FontSize="16" 
                                           Foreground="Red"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#6B7280"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ОСНОВНОЙ КОНТЕНТ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ПАНЕЛЬ НАВИГАЦИИ -->
                <Border Grid.Column="0" 
                        Background="#F9FAFB" 
                        BorderThickness="0 1 1 1" 
                        BorderBrush="#E5E7EB">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <!-- Профиль пользователя -->
                            <Grid Width="56" Height="56" Margin="0 0 0 12">
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FFF2ECFF" Offset="0"/>
                                            <GradientStop Color="#FF87A2FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Image Source="/images/photo_15.jpg" 
                                           Stretch="UniformToFill"
                                           Width="52"
                                           Height="52">
                                    <Image.Clip>
                                        <EllipseGeometry Center="26,26" RadiusX="26" RadiusY="26"/>
                                    </Image.Clip>
                                </Image>
                            </Grid>

                            <!-- Меню навигации -->
                            <StackPanel>
                                <!-- Дашборд -->
                                <Border x:Name="DashboardBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4"
                                        Background="#E0E7FF">
                                    <Button x:Name="DashboardButton"
                                            Click="DashboardButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📊" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Дашборд" 
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                                <!-- Жильцы -->
                                <Border x:Name="ResidentsBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Button x:Name="ResidentsButton"
                                            Click="ResidentsButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="👥" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Жильцы" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                                <!-- Комнаты -->
                                <Border x:Name="RoomsBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Button x:Name="RoomsButton"
                                            Click="RoomsButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🛏️" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Комнаты" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                                <!-- Договоры -->
                                <Border x:Name="ContractsBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Button x:Name="ContractsButton"
                                            Click="ContractsButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📄" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Договоры" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                                <!-- Финансы -->
                                <Border x:Name="FinanceBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Button x:Name="FinanceButton"
                                            Click="FinanceButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="💰" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Финансы" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                                <!-- Счётчики -->
                                <Border x:Name="MetersBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Button x:Name="MetersButton"
                                            Click="MetersButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📊" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Счётчики" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                                <!-- Отчёты -->
                                <Border x:Name="ReportsBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Button x:Name="ReportsButton"
                                            Click="ReportsButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📈" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Отчёты" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                                <!-- Безопасность -->
                                <Border x:Name="SecurityBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Button x:Name="SecurityButton"
                                            Click="SecurityButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔒" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Безопасность" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>

                                <!-- Настройки -->
                                <Border x:Name="SettingsBorder"
                                        Padding="12" 
                                        CornerRadius="8" 
                                        Margin="0 0 0 4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Button x:Name="SettingsButton"
                                            Click="SettingsButton_Click"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalContentAlignment="Left"
                                            Padding="12 10"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="⚙️" 
                                                       FontSize="16"
                                                       Margin="0 0 12 0"/>
                                            <TextBlock Text="Настройки" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- РАБОЧАЯ ОБЛАСТЬ -->
                <Border Grid.Column="1" 
                        Background="White">
                    <ContentControl x:Name="MainContent">
                        <Grid>
                            <TextBlock Text="Выберите раздел в меню слева" 
                                       FontSize="18" 
                                       Foreground="#9CA3AF"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </ContentControl>
                </Border>
            </Grid>

            <!-- ФУТЕР -->
            <Border Grid.Row="2"
                    Height="40" 
                    Background="#F9FAFB" 
                    CornerRadius="0 0 30 30"
                    BorderThickness="1 0 1 1"
                    BorderBrush="#E5E7EB">
                <Grid>
                    <TextBlock Text="© 2025 Система учёта общежития v1.0" 
                               Foreground="#6B7280" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="12"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0 0 24 0">
                        <Ellipse Width="8" 
                                 Height="8" 
                                 Fill="#10B981" 
                                 Margin="0 0 8 0"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="В сети" 
                                   Foreground="#6B7280" 
                                   FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>